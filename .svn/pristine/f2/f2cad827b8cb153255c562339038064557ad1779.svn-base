body {
margin: 0;
background: url(images/gradient.jpg) 0 0 repeat-x #666;
font-size: 12px;
font-family: Verdana, Arial, Helvetica, sans-serif;
padding: 0;
}

#wrap {
background: url(images/topgradient.jpg) top center no-repeat;
width: 785px;
height: 600px;
margin: auto;
}

/* header */
#header {}

#logo {
float: left;
margin: 0 0 0 25px;
}

#phone {
float: right;
margin: 0 42px 0 0;
}

#banner {
clear: both;
background: url(images/banner.jpg) 0 0 no-repeat;
width: 777px;
height: 206px;
margin: auto;
}

#flash {
width: 737px;
height: 182px;
background: url(images/flash.jpg) 0 0 no-repeat;
position: relative;
top: 9px;
left: 20px;
}

#topnav {
clear: right;
float: right;
height: 31px;
width: 384px;
background: url(images/topnav.jpg) 0 0  no-repeat;
margin: 0 14px 0 0;
}

#breadcrumb {
width: 777px;
height: 30px;
margin: auto;
background: url(images/breadcrumb.jpg) 0 0 repeat-x;
color: #808080;
}

#breadcrumb p {
font-weight: bold;
float: left;
margin-left: 12px;
}

/* main */
#main {
background: #fff;
width: 777px;
margin: auto;
}

#content {
float: left;
width: 470px;
margin: 14px 0 0 12px;
}

#sidebar {
float: right;
width: 275px;
margin: 14px 10px 0 0;
}

.contentitem {
background: url(images/contentitem.jpg) 0 0 no-repeat #fff;
width: 600px;
float: left;
margin-bottom: 30px;
}

.date {
float: right;
color: #999;
margin: 10px 20px 0 0;
font-weight: bold;
}

#content h1 {
clear: right;
font-weight: bold;
color: #808080;
margin: 0 0 10px 10px;
float: left;
width: 300px;
font-size:1.25em;
}

#content h1 strong {
color: #000;
font-weight: normal;
font-size: 2em;
vertical-align: -.25em;
}

#content p {
display: block;
width: 446px;
margin: 0 0 0 10px;
color: #333;
line-height: 1.5em;
clear: left;
}

table {
clear: both;
margin: auto;
border-bottom: 1px solid #ccc;
border-left: 1px solid #ccc;
}

th {
background: url(images/tablegradient2.jpg) bottom right no-repeat #fff;
font: Arial, Helvetica, sans-serif;
color: #fff;
text-align: left;
}

th:hover {
background: url(images/tablegradient2x.jpg) bottom right no-repeat #fff;
}

td, th {
padding: 1em;
border-top: 1px solid #308fbf;
border-right: 1px solid #ccc;
}

td:hover{
background: #fff;
}

.trblue td:hover{
background: #f2fbff;
}

tr {
background: url(images/tablegradient.jpg) 0 0 repeat-x #fff;
}

.trblue {
background: url(images/tablegradient3.jpg) 0 0 repeat-x #fff;
}

.right {
float: right;
margin: 2px;
}

.left {
float: left;
margin: 10px 0 0 10px;
}

.clr {
clear: both;
}

.more {
clear: both;
float: right;
margin:5px 25px 0 0;
color: #333;
text-decoration: none;
font-weight: bold;
border-bottom: 1px dotted #333;
}

a.more:hover {
color:#999;
}

.box {
width: 275px;
margin-bottom: 25px;
}

.boxtop {
width: 275px;
background: url(images/boxtop.jpg) top center #fff;
}

.boxbtm {
width: 275px;
height: 10px;
background: url(images/boxbtm.jpg) bottom center no-repeat #fff;
}

#sidebar h4 {
color: #fff;
text-align: center;
position: relative;
top: 3px;
margin: 0;
}

#sidebar p {
display: block;
width: 230px;
margin: 25px auto 0 auto;
height:120px;
overflow: hidden;
line-height: 1.5em;
color: #333;
}

#sidebar p.closed {
margin-top: 8px;
height: 0px;
overflow: hidden;
}

/* footer */
#footer {
background: url(images/footer.jpg) 0 0 no-repeat;
margin: auto;
clear: both;
padding-top:150px;
}

#footer p{
text-align: center;
padding: 10px;
color: #999;
}

/* Forms */
input, textarea {
width:100%;
float:left;
clear:left;
margin:2px;
background: url(images/forms.jpg) 0 0 repeat-x #fff;
border:2px solid #e6ecf2;
padding: .2em;
color: #666;
}

.submit {
background: #fff;
border: #c3ced9 2px solid;
width: auto;
float: right;
padding: .1em;
}

.submit:hover {
color: #000;
border: #b6d4f2 2px solid;
}
fieldset {
margin: 25px auto 0 auto;
width:80%;
border: none;
}

label {
font-weight:bold;
color: #003366;
font-size:1.25em;
margin: 0;
}

/* MENU */

#mainnav {
width: 777px;
height: 30px;
margin: auto;
/* background: url(images/mainnav.jpg) 0 0 no-repeat; */
}

#mainnav img {
float: left;
}

#mainnav ul {
padding:0;
margin:1px 0;
list-style: none;
float: left;
width: 657px;
overflow: hidden;
}

#mainnav ul li {
margin-left:-1px;
border:1px solid #ccc;
font-size:12px;
height:17px;
padding:6px 8px 0 8px; /* adjust this depending on submenu link length */
color: #999;
cursor: pointer;
float: left;
width: 56px;
}

#mainnav ul li:hover {
color:#000;
}

#mainnav ul li ul {
background: none;
height: 100px;
overflow: hidden;
position: relative;
top: -20px;
left: 0;
padding-top: 25px;
margin: 0;
text-align: center;
}

#mainnav ul li ul:hover {
height: 300px;
}

#mainnav ul li ul li{
height:auto;
padding:3px;
float: left;
clear: left;
margin-bottom: -1px;
background: #fff;
color: #000;
}

#mainnav ul li ul li:hover{
background: #f2f2f2;
}

/* ~Fin~ */
